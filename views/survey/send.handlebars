<div class="col-md-8">
    <div class="card">
        <div class="card-header pt-3">
            <h2><i class="tim-icons icon-email-85 mr-2 mb-1"></i> Send Survey</h2>
        </div>
        <div class="card-body">
            <form id="sendSurveyForm" class="form" action="/emailSurvey/{{surveyId}}" method="POST">
                <fieldset>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                            <label>Email</label>
                            <input id="email" name="email" type="text" class="form-control form-control-sm mb-1" placeholder="To" value="{{email}}">
                            <small id="emailHelp" class="form-text text-muted">Multiple email addresses should be seperated by comma</small>
                                {{#if errors}}
                                    {{#each errors}}
                                        {{#ifEquals param "email"}}
                                            <div class="messages text-danger font-weight-bold">{{msg}}</div>
                                        {{/ifEquals}}
                                    {{/each}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                            <label>Subject</label>
                            <input id="subject" name="subject" type="text" class="form-control form-control-sm mb-1" value="{{subject}}">
                                {{#if errors}}
                                    {{#each errors}}
                                        {{#ifEquals param "subject"}}
                                            <div class="messages text-danger font-weight-bold">{{msg}}</div>
                                        {{/ifEquals}}
                                    {{/each}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                            <label>Message</label>
                            <textarea id="message" name="message" type="text" class="form-control form-control-sm mb-1" onkeyup="SetNewSize(this);" style="overflow-y: hidden; height: 59px; min-height: 5em; max-height: 50vh; width: 100%;">Hello, Please take a moment to fill out this survey.</textarea>
                                {{#if errors}}
                                    {{#each errors}}
                                        {{#ifEquals param "message"}}
                                            <div class="messages text-danger font-weight-bold">{{msg}}</div>
                                        {{/ifEquals}}
                                    {{/each}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-sm btn-fill btn-primary float-right">Send Survey</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function SetNewSize(textarea) {
        textarea.style.height = "0px";
        textarea.style.height = textarea.scrollHeight + "px";
    }
</script>
