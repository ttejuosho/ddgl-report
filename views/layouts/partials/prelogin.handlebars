  <script type="text/javascript">
    function resetModal(){
      $("#subscribeModal").modal('hide');
      $('.messages').text('');
      $('#subscribeForm')[0].reset();
    }

    $('#subscribeForm').on('submit', ()=>{
      $("#subscribeModal").modal('hide');
      survenaire.showNotification('success', 'top', 'right', 'You\'re subcribed');
    });
  </script>
  {{#if errors}}
    <script type="text/javascript">
      $(function () {
          $("#subscribeModal").modal({
              backdrop: false,
              show: true
          });
      });
    </script>
  {{/if}}
