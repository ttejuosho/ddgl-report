      <div id="subscribeModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="subscribeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="col-md-10">
            <div class="modal-content">
            <div class="card mb-0">
                <div class="card-header"><h2 class="title mb-1">Subscribe</h2></div>
            <div class="card-body">
            <form action="/subscribe" id="subscribeForm" method="POST" novalidate>
              <fieldset>
                <div class="row">
                  <div class="col-md-12">
                    <div class="messages text-danger font-weight-bold">{{duplicateMessage}}</div>
                    <div class="form-group">
                      <label for="firstName">First Name</label>
                      <input type="text" class="form-control mb-1" id="firstName" name="firstName" placeholder="First Name" value="{{firstName}}" required>
                      {{#if errors}}
                          {{#each errors}}
                              {{#ifEquals param "firstName"}}
                                  <div class="messages text-danger font-weight-bold">{{msg}}</div>
                              {{/ifEquals}}
                          {{/each}}
                      {{/if}}
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="lastName">Last Name</label>
                      <input type="text" class="form-control mb-1" id="lastName" name="lastName" placeholder="Last Name" value="{{lastName}}" required>
                    {{#if errors}}
                        {{#each errors}}
                            {{#ifEquals param "lastName"}} 
                                <div class="messages text-danger font-weight-bold">{{msg}}</div>
                            {{/ifEquals}}
                        {{/each}}
                    {{/if}}
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="email">Email Address</label>
                      <input type="email" class="form-control mb-1" id="email" name="email" placeholder="ty@surveneer.com" value="{{email}}" required>
                    {{#if errors}}
                        {{#each errors}}
                            {{#ifEquals param "email"}} 
                                <div class="messages text-danger font-weight-bold">{{msg}}</div>
                            {{/ifEquals}}
                        {{/each}}
                    {{/if}}
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-sm btn-fill btn-primary float-right">Subscribe</button>
                <button type="button" class="btn btn-sm btn-fill btn-primary float-right mr-2" onclick="resetModal()">Cancel</button>
              </fieldset>
            </form>

          </div>
        </div>
      </div>
</div>
      </div>
      </div>

    </div>
  </div>

