<div class="col-md-10">
    <div id="responseCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {{#each responses}}            
            <li data-target="#responseCarousel" data-slide-to="{{@index}}"></li>
        {{/each}}
        {{!-- <li data-target="#responseCarousel" data-slide-to="0" class="active"></li> --}}
        {{!-- <li data-target="#responseCarousel" data-slide-to="1"></li> --}}
    </ol>
    <div class="carousel-inner">
        <p>{{responses.answer}}</p>
        {{#each responses.Respondent}}
            {{#ifEquals @index "1"}}
                <div class="carousel-item active">
            {{else}}
                <div class="carousel-item ">
            {{/ifEquals}}
                <ol>
                    <li>{{Survey.surveyName}}</li>
                    <li>{{Respondent.respondentName}}</li>
                    <li>{{Respondent.respondentEmail}}</li>
                    <li>{{Respondent.respondentPhone}}</li>
                    <li>{{Question.question}}</li>
                    <li>{{Question.optionType}}</li>
                    <li>{{answer}}</li>
                    <li>{{Survey.RespondentCount}}</li>
                    <li>{{Survey.RecipientCount}}</li>
                    <li>{{Survey.QuestionCount}}</li>
                </ol>
            </div>
        {{/each}}
        {{!-- <div class="carousel-item">
            <img class="d-block w-100" src="../assets/img/default-avatar.png" alt="Second slide">
        </div> --}}
    </div>
    <a class="carousel-control-prev" href="#responseCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#responseCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
</div>